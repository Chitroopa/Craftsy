<%= render "layouts/errors", :object => @review %>
<%= form_for [product, review], url: url  do |f| %>
  <div class="form-group">
    <%= f.label :comment, "Review" %><br>
    <%= f.text_area :comment, :class=>"form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <%= f.text_field :rating, :class=>"form-control" %><br>
  </div>
  <%= f.submit "Save", :class=>"btn btn-primary"%>
<% end %>
